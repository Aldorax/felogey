---
import { Image } from "@astrojs/image/components";
import config from "@config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block md:w-[150px] lg:w-auto">
  {src || logo ? <h1 class="font-bold uppercase">FELOJEY</h1> : logo_text ? logo_text : title}
</a>
